<div id="<%= dom_id product %>">
  <div class="flex items-start space-x-3">
    <%= image_tag product.photo, class: "w-36 aspect-auto" %>
    <div>
      <p class="my-5">
        <strong class="block font-medium mb-1">Code:</strong>
        <%= product.code %>
      </p>
      <p class="my-5">
        <strong class="block font-medium mb-1">Name:</strong>
        <%= product.name %>
      </p>
      <p class="my-5">
        <strong class="block font-medium mb-1">Description:</strong>
        <%= product.description %>
      </p>
      <p class="my-5">
        <strong class="block font-medium mb-1">Price:</strong>
        <%= product.price %>
      </p>
    </div>
  </div>
  <%= button_to "Add to cart", cart_add_path(id: product.id), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <hr class="mt-6">
</div>
